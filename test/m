import React, { useState } from "react";

/**
 * Dakota's Music World — Using hosted logo image with clickable hotspots
 */

export default function DMWTheRoadRoom() {
  const [active, setActive] = useState(null);

  return (
    <div style={{ minHeight: "100vh", background: "#0a0a0a", position: "relative" }}>
      {/* Logo in top-left corner as an image */}
      <div style={{ position: "absolute", top: 20, left: 20 }}>
        <a href="/" aria-label="Go to Dakota's Music World home" style={{ display: "inline-block", lineHeight: 0, cursor: "pointer" }}>
          <img src="https://i.ibb.co/q3Pjys4Z/dmw-logo.png" alt="Dakota's Music World Logo" style={{ width: 300, height: "auto" }} />
        </a>
      </div>

      {/* Hotspots */}
      <Hotspot x="40%" y="60%" label="Couch / Interviews" onClick={() => setActive("interviews")} />
      <Hotspot x="55%" y="50%" label="TV / Live" onClick={() => setActive("live")} />
      <Hotspot x="70%" y="45%" label="Photo Wall" onClick={() => setActive("photos")} />

      {/* Panel showing active selection */}
      {active && (
        <div style={{ position: "absolute", bottom: 20, left: "50%", transform: "translateX(-50%)", background: "rgba(0,0,0,0.8)", padding: 20, borderRadius: 8, color: "#fff", maxWidth: "400px" }}>
          <button onClick={() => setActive(null)} style={{ float: "right", background: "none", border: "none", color: "#fff", fontSize: 18 }}>✕</button>
          <h3 style={{ marginTop: 0 }}>{active === "interviews" ? "Interviews" : active === "live" ? "Live Recordings" : "Photographs"}</h3>
          <p>Content for {active} will appear here.</p>
        </div>
      )}
    </div>
  );
}

function Hotspot({ x, y, label, onClick }) {
  return (
    <div
      onClick={onClick}
      style={{
        position: "absolute",
        left: x,
        top: y,
        transform: "translate(-50%,-50%)",
        cursor: "pointer",
        display: "flex",
        flexDirection: "column",
        alignItems: "center"
      }}
    >
      <div style={{ width: 22, height: 22, borderRadius: "50%", background: "#fff", border: "2px solid #000" }} />
      <span style={{ marginTop: 6, color: "#fff", fontSize: 12, background: "rgba(0,0,0,0.6)", padding: "2px 6px", borderRadius: 4 }}>{label}</span>
    </div>
  );
}